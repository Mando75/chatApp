<nav class="teal">
    <div class="nav-wrapper">
        <a href="/" class="brand-logo center title">Material Chat</a>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul class="left hide-on-med-and-down">
            <a href="#" data-activates="mobile-demo" class="menu"><i class="material-icons right">menu</i>Menu</a>
        </ul>
        <ul class="side-nav" id="mobile-demo">
            <% if( typeof user == 'object' && user) { %>
            <li><div class="userView">
                    <div class="background">
                        <img class='responsive-img' src="https://static.pexels.com/photos/6675/flight-mountains-sky-flying.jpeg">
                    </div>
                    <% if (user.avatar) { %>
                    <a href="/account"><img id="avatar" src=<%= user.avatar %>></a>
                    <% } else { %>
                    <a href="/account"><i class="material-icons">account_circle</i></a>
                    <% } %>
                    <a href="/account"><span id='username' class="name black-text"><%= user.username %></span></a>
                    <a href="/account"><span id='email' class="email black-text"><%= user.email %></span></a>
                </div></li>
            <li><a href="/chat" class="waves-effect"><i class="material-icons">chat</i>Join the Chat!</a></li>
            <li><a href="#modal1"  class="waves-effect" id="getFriendsNav"><i class="material-icons">supervisor_account</i>See Who's Online!</a></li>
            <li><div class="divider"></div></li>
            <li><a class="btn btn-small purple waves-effect" href="/account/logout" role="button">Logout</a></li>
            <% }  else  { %>
            <li class="secondary-text-color"><a role="button" class="btn btn-small waves-effect purple" href="/account/login">Please Login</a></li>
            <% } %>
        </ul>
    </div>
</nav>
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Your Friends</h4>
        <table class="highlight responsive-table" id="table">
            <thead>
            <tr>
                <th></th>
                <th>Username</th>
                <th>Status</th>
                <th>Last Login</th>
            </tr>
            </thead>
            <tbody id="tbody">

            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <a href="#!" id="close" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>
<script src="/javascripts/accounts.js"></script>